<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/backgroundColor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imagePreview"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:contentDescription="@string/imageThumbnail"
        app:srcCompat="@drawable/profile_icon" />

    <TextView
        android:id="@+id/open_listing_title"
        android:textColor="@color/textColor"
        android:layout_width="369dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="289dp"
        android:textSize="20pt"
        android:text="TextView" />

    <TextView
        android:id="@+id/open_listing_date"
        android:textColor="@color/textColor"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="322dp"
        android:text="@string/demoDate" />

    <TextView
        android:id="@+id/open_listing_time"
        android:textColor="@color/textColor"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="264dp"
        android:layout_marginBottom="323dp"
        android:text="@string/demoTime" />

    <TextView
        android:id="@+id/open_listing_desc"
        android:textColor="@color/textColor"
        android:layout_width="368dp"
        android:layout_height="159dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="100dp"
        android:text="TextView"
        android:textSize="8pt" />

</RelativeLayout>